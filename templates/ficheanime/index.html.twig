            </div>
        </section>
        <section>
            <div class="row">
                <div class="card col-12 ficheAnime">
                    <div class="row">
                        <div class="col-6">
                            <img src="{{ fiche.image_url }}" alt="">
                        </div>
                        <div class="col-6">
                            <select name="" id="">
                                {% for i in 1..episodes.episodes|length %}
                                <option value="{{i}}">episode {{i}}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <p class="id">{{fiche.mal_id}}</p>
                    </div>
                    <div class="row">
                        <p>{{ fiche.title }}</p>
                        <p>{{ fiche.title_japanese }}</p>
                    </div>
                    <div class="row">
                        <p>{{ fiche.synopsis }}</p>
                    </div>
                    <div class="row">
                        <p>{{ fiche.type }}</p>
                    </div>
                    <div class="row">
                        <p>{{ fiche.score }}</p>
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}
